Slider ----------------------------------------------------------------------------------------
---------------------------------------------------------------------------------------------------------- */

/*
  This is just some starting CSS, you'll want to customize to your site
*/
.slider {
	position: relative;
}

.frame {
    /**
     * (optional) wrapper width, specifies width of the slider frame.
     */
    width: 100%;
		margin:0 auto;
    position: relative;
    font-size: 0;
    line-height: 0;
    overflow: hidden;
    white-space: nowrap;
}

.slides {
    display: inline-block;
}

.slides li {
    position: relative;
    display: inline-block;

    /**
     * (optional) if the content inside the slide element has a defined size.
     */
    width: 100%;
}

.prev, .next {
    position: absolute;
    top: 0;
    width: 50%;
    height: 100%;
    display: block;
    cursor: pointer;
}

.next {
    right: 0px;
}

.prev {
    left: 0px;
}

.next svg, .prev svg {
    width: 250px;
		height:auto;
}

.apath {
	fill:#000;
}